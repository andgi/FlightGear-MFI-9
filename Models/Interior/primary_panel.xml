<PropertyList>

 <!-- No main model. -->
 <!-- The origin is in the middle of the lower edge of the panel. -->
 <!-- x/y/z == back/right/up -->

 <!-- Preliminary primary instruments. Top-bottom, left-right  -->
 <model>
  <name>Magnetic Compass</name>
  <path>Aircraft/c172p/Models/Interior/Panel/Instruments/mag-compass/mag-compass.xml</path>
  <offsets>
   <x-m>0.000</x-m>
   <y-m>0.000</y-m>
   <z-m>0.210</z-m>
  </offsets>
 </model>

 <model>
  <name>Airspeed Speed Indicator</name>
  <path>Aircraft/c172p/Models/Interior/Panel/Instruments/asi/asi.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m>-0.110</y-m>
   <z-m> 0.155</z-m>
  </offsets>
  <overlay>
   <animation n="1">
    <property n="0">instrumentation/airspeed-indicator/indicated-speed-kt</property>
   </animation>
  </overlay>
 </model>
 <model>
  <name>Attitude Indicator</name>
  <path>Aircraft/c172p/Models/Interior/Panel/Instruments/AI/AI.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m> 0.000</y-m>
   <z-m> 0.155</z-m>
  </offsets>
 </model>
 <model>
  <name>Vertical Speed Indicator</name>
  <path>Aircraft/c172p/Models/Interior/Panel/Instruments/VSI/VSI.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m> 0.110</y-m>
   <z-m> 0.155</z-m>
  </offsets>
 </model>

 <model>
  <name>Altimeter</name>
  <path>Aircraft/Instruments-3d/alt-2/alt2-3d.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m>-0.110</y-m>
   <z-m> 0.055</z-m>
  </offsets>
 </model>
 <model>
  <name>Horisontal Situation Indicator</name>
  <path>Aircraft/c172p/Models/Interior/Panel/Instruments/hi/hi.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m>0.000</y-m>
   <z-m>0.055</z-m>
  </offsets>
 </model>
 <model>
  <name>Turn Coordinator</name>
  <path>Aircraft/Instruments-3d/tc/tc.xml</path>
  <offsets>
   <x-m>-0.005</x-m>
   <y-m>0.110</y-m>
   <z-m>0.055</z-m>
  </offsets>
 </model>

 <!-- LOD -->
 <animation> 
  <type>range</type>
  <min-m>0</min-m>
  <max-m>50</max-m>
 </animation>

</PropertyList>
